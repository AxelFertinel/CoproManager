generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

enum Role {
  ADMIN
  BASIC
}

model User {
  id              Int       @id @default(autoincrement())
  email           String    @unique
  password        String
  role            Role      @default(ADMIN)
  coproprieteId   String
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt

  @@map("users")
}

model Logement {
  id              Int       @id @default(autoincrement())
  name            String
  email           String    @unique
  tantieme        Float
  advanceCharges  Float     @default(0)
  waterMeterOld   Float     @default(0)
  waterMeterNew   Float     @default(0)
  coproprieteId   String
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt
  charges         Charge[]
  calculations    Calculation[]

  @@map("logements")
}

model Charge {
  id                Int       @id @default(autoincrement())
  type              String    // WATER, INSURANCE, BANK
  amount            Float
  date              DateTime
  startDate         DateTime
  endDate           DateTime
  description       String?   @db.Text
  waterUnitPrice    Float?    @default(2.9)
  createdAt         DateTime  @default(now())
  updatedAt         DateTime  @updatedAt
  logementId        Int?
  logement          Logement? @relation(fields: [logementId], references: [id])

  @@map("charges")
}

model Calculation {
  id                Int       @id @default(autoincrement())
  logementId        Int
  logement          Logement  @relation(fields: [logementId], references: [id])
  waterAmount       Float
  insuranceAmount   Float
  bankAmount        Float
  advanceCharges    Float
  totalAmount       Float
  date              DateTime  @default(now())
  createdAt         DateTime  @default(now())
  updatedAt         DateTime  @updatedAt

  @@map("calculations")
}

enum ChargeType {
  WATER
  INSURANCE
  BANK
}
